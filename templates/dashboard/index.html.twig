                                                        <div class="display-4 fs-4 mb-2 fw-normal font-sans-serif"  data-countup="{&quot;endValue&quot;:{{skills|length}},&quot;decimalPlaces&quot;:0,&quot;suffix&quot;:&quot;&quot;}"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card mb-3   ">
                                            <div class="text-center">
                                                <div class="card overflow-hidden" style="min-width: 12rem">
                                                    <div class="bg-holder bg-card" style="background-image:url(../assets/img/icons/spot-illustrations/corner-3.png);"></div>
                                                    <!--/.bg-holder-->
                                                    <div class="card-body position-relative">
