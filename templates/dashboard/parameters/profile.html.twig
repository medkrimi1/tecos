{% extends 'layoutAdmin.html.twig' %}

{% block body %}
  

                        <div class="job-bx job-profile  bg-white">
                            <div class="job-bx-title clearfix">
                                <h5 class="font-weight-700 float-start  text-primary">Basic information</h5>


                            </div>
                                    {% for message in app.flashes('success') %}
            <div class="text-center text-dark alert alert-success">
                {{ message }}
            </div>
            {% endfor %}
                {% for message in app.flashes('error') %}
            <div class="text-center text-dark alert alert-warning">
                {{ message }}
            </div>
        {% endfor %}
                              {{ form_start(form) }}

                           <div class="row">

                                    <div class="col-lg-6 col-md-6">
                                        <div class="form-group">
                                            <div class="fs-0">Nom</div>
                                             {{ form_widget(form.lname,{attr: {class: 'form-control'}}) }} 
                                        </div>
                                    </div>

                                    <div class="col-lg-6 col-md-6">
                                        <div class="form-group">
                                            <div class="fs-0">Prénom</div>
                                      {{ form_widget(form.fname,{attr: {class: 'form-control'}}) }}  </div>
                                    </div>
                                    <div class="clear"></div>










                                   <div class="col-lg-6 col-md-6">
                                    <div class="form-group">
                                        <div class="fs-0">Adresse e-mail:</div>
                                   {{ form_widget(form.email,{attr: {class: 'form-control'}}) }}   </div>
                                </div>








                                </div>















                                <ul> </ul>



                                <div class="text-center" >

                                    <button type="submit" class="btn btn-primary rounded-pill ">mettre à jour</button> </div>
                        
                        </div>
                         {{ form_end(form) }}

            

{% endblock %}